<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/user_default" />

    <TextView
        android:id="@+id/settings_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="User Name"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/settings_profile_name"
        android:layout_centerHorizontal="true"
        android:text="User Status"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/change_image_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="5dp"
        android:layout_below="@id/settings_profile_status"
        android:layout_centerHorizontal="true"
        android:background="#965a21"
        android:textStyle="bold"
        android:text="Change Image" />

    <Button
        android:id="@+id/change_status_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_below="@id/change_image_button"
        android:layout_centerHorizontal="true"
        android:background="#BBB"
        android:textStyle="bold"
        android:text="Change Status" />

</RelativeLayout>